<div class="main-profile">
  <div class="head-area">
    <h1>
      <i class="fas fa-user-circle"></i>
      <%= @user.nickname%>のプロフィール                
    </h1>
    <% if @user.id == current_user.id %>
      <%= link_to "編集", edit_user_registration_path, class: "edit" %>
    <% end %>
  </div>
  <div class="profile-area">
    <div class="myimage">
      <% if @user.image.blank? %>
        <%= image_tag 'noimage.png'%>  
      <% else %>
        <%= image_tag @user.image.url %>
      <% end %>
    </div>
    <div class="profile-inner" style="">
      <% if @user.image.blank? %>
        <%= image_tag 'noimage.png'%>  
      <% else %>
        <%= image_tag @user.image.url %>
      <% end %>
      <div class="user-main">
        <div class="name">
          <p><%= @user.nickname %></p>
        </div>
        <div class="user-comment" style="min-height: 10px;">
          <p><%= @user.profile %></p>
        </div>
      </div>
    </div>
    <div class="user-data">
      <ul>
        <li>
          <button name="button" type="button" onclick="window.alert('サービスの利用にはログインが必要です');location.href='/ja/login_required';" class="btn-follow">
            <i class="fas fa-grin-hearts"></i>いいねする
          </button>            
        </li>
        <li>
          いいね:13
        </li>
      </ul>
    </div>
    <% if @user.id == current_user.id %>
      <div class="all-profile">
        <table>
          <tr>
            <th>email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Birthday</th>
            <td><%= @user.birthday%></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>